<!DOCTYPE html>
<html>
  <head>
    <title>V LandScape</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>
   
    
    <% if logged_in? %>
      <%= button_to "Log out", logout_path, method: :delete %>
      <%= button_to "Home", user_path(current_user.id), method: :get %>
      <h5><%= link_to("All Landscapes",landscapes_path) %> - <%= link_to("Search Landscapes",search_landscapes_path) %> - <%= link_to("New Landscape",new_landscape_path) %></h5>
      <h5><%= link_to("All Teams",teams_path) %> - <%= link_to("New Team",new_team_path) %></h5>
   
 
      

    <% else %>

      <%= button_to "Login", '/login', method: :get %>
      <%= button_to "Login with Github", github_auth_path, method: :get %>
      <%= button_to "Sign Up", '/users/new', method: :get %>
    <% end %>

  <body>
  
    <%= flash[:notice] %>
    <%= flash[:error] %>
  
    <%= yield %>
  </body>
</html>
